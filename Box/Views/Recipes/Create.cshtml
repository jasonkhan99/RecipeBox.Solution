@{
  Layout = "_Layout";
}

@model Box.Models.Recipe

<h3>Add a new recipe</h3>

@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.Label("Recipe Name")
    @Html.TextBoxFor(model => model.RecName, new { @class="form-control" })
  </div>
  <div class="form-group">
    @Html.Label("Description")
    @Html.TextBoxFor(model => model.RecDesc, new { @class="form-control" })
  </div>
  <div class="form-group">
    @Html.Label("Instructions")
    @Html.TextAreaFor(model => model.RecInst, new { cols="80", rows="20", @class="form-control" })
  </div>
  <input type="submit" value="Add Recipe" class="btn btn-primary">
}

<p>@Html.ActionLink("All recipes", "Index")</p>
