@{
  Layout = "_Layout";
}

@using Box.ViewModels
@model RegisterViewModel
<h2>Register New User</h2>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
  <div class="form-group">
    @Html.Label("Email Address")
    @Html.TextBoxFor(user => user.Email, new { @class="form-control" })
  </div>
  <div class="form-group">
    @Html.Label("Password")
    @Html.TextBoxFor(user => user.Password, new { @class="form-control", @type="password" })
  </div>
  <div class="form-group">
    @Html.Label("Confirm Password")
    @Html.TextBoxFor(user => user.ConfirmPassword, new { @class="form-control", @type="password" })
  </div>
  <input type="submit" value="Sign Up" class="btn btn-default"/>
}